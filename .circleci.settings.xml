<?xml version="1.0" encoding="UTF-8"?>
<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.2.0 http://maven.apache.org/xsd/settings-1.2.0.xsd"
  xmlns="http://maven.apache.org/SETTINGS/1.2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <servers>
    <server>
      <id>central</id>
      <username>${env.ARTIFACTORY_USERNAME}</username>
      <password>${env.ARTIFACTORY_APIKEY}</password>
    </server>

    <server>
      <username>crypto-pay-ci-user</username>
      <password>.......</password>
      <id>snapshots</id>
    </server>
  </servers>
  <profiles>

    <profile>
      <id>aliyun</id>
      <repositories>
        <repository>
          <id>aliyun</id>
          <url>https://maven.aliyun.com/repository/public</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
      </repositories>
    </profile>

    <profile>
      <repositories>
        <repository>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
          <id>mvn-central</id>
          <name>Maven Repository Switchboard</name>
          <url>http://repo1.maven.org/maven2</url>
        </repository>
        <repository>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
          <id>central</id>
          <name>crypto-pay-maven</name>
          <url>https://monacohq.jfrog.io/artifactory/crypto-pay-maven</url>
        </repository>
        <repository>
          <snapshots/>
          <id>snapshots</id>
          <name>crypto-pay-maven</name>
          <url>https://monacohq.jfrog.io/artifactory/crypto-pay-maven</url>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
          <id>central</id>
          <name>crypto-pay-maven</name>
          <url>https://monacohq.jfrog.io/artifactory/crypto-pay-maven</url>
        </pluginRepository>
        <pluginRepository>
          <snapshots/>
          <id>snapshots</id>
          <name>crypto-pay-maven</name>
          <url>https://monacohq.jfrog.io/artifactory/crypto-pay-maven</url>
        </pluginRepository>
      </pluginRepositories>
      <id>artifactory</id>
    </profile>
  </profiles>
  <activeProfiles>
    <activeProfile>aliyun</activeProfile>
    <activeProfile>artifactory</activeProfile>
  </activeProfiles>
</settings>